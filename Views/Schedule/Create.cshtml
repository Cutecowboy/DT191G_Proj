@model projApp.Model.ScheduleModel

@{
    ViewData["Title"] = "Create";
    bool admin = ViewBag.Username == "admin@admin.com" ?? false;
}


@if (!admin)
{
    <div class="alert alert-danger" role="alert">
        <p>You do not have access to this page! Please log in as an administrator!</p>
        <p><a asp-action="Index">Go back</a></p>
    </div>
}
else
{

    <h1>Create</h1>

    <h4>ScheduleModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Therapy" class="control-label"></label>
                    <input asp-for="Therapy" class="form-control" />
                    <span asp-validation-for="Therapy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Length" class="control-label"></label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookedBy" class="control-label"></label>
                    <input asp-for="BookedBy" class="form-control" />
                    <span asp-validation-for="BookedBy" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Booked" /> @Html.DisplayNameFor(model => model.Booked)
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="action">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus-square" viewBox="0 0 16 18">
                            <path
                                d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z">
                            </path>
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4">
                            </path>
                        </svg>
                        Create
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
