@model projApp.Model.ScheduleModel

@{
    ViewData["Title"] = "Edit";
    bool admin = ViewBag.Username == "admin@admin.com" ?? false;
}


@if (!admin)
{
    <div class="alert alert-danger" role="alert">
        <p>You do not have access to this page! Please log in as an administrator!</p>
        <p><a asp-action="Index">Go back</a></p>
    </div>
}
else
{

    <h1 class="display-4">Edit</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Therapy" class="control-label"></label>
                    <input asp-for="Therapy" class="form-control" />
                    <span asp-validation-for="Therapy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Length" class="control-label"></label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookedBy" class="control-label"></label>
                    <input asp-for="BookedBy" class="form-control" />
                    <span asp-validation-for="BookedBy" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Booked" /> @Html.DisplayNameFor(model => model.Booked)
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="action">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                            class="bi bi-pencil" viewBox="0 0 18 18">
                            <path
                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325">
                            </path>
                        </svg>
                        Edit
                    </button>

                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
