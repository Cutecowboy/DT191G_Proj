@model projApp.Model.ScheduleModel

@{
    ViewData["Title"] = "Details";
    bool admin = ViewBag.Username == "admin@admin.com" ?? false;
}


@if (!admin)
{
    <div class="alert alert-danger" role="alert">
        <p>You do not have access to this page! Please log in as an administrator!</p>
        <p><a asp-action="Index">Go back</a></p>
    </div>
}
else
{
    <h1 class="display-4">Details</h1>

    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Therapy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Therapy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Length)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Length)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Booked)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Booked)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}